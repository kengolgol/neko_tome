<%= render "shared/header" %>

<div class="main">
  <div class="inner">
    <div class="user_wrapper">
      <div class="user_page_header">
        <h2 class="page-heading">
          <% if host_signed_in? && current_host.id == @host.id %>
            <%= link_to "あなた", host_my_page_path(@host.id) %>をフォローしている人　<%= @host.followers_count %>人
          <% else %>
            <%= link_to "#{@host.nickname}さん", host_my_page_path(@host.id) %>をフォローしている人　<%= @host.followers_count %>人
          <% end %>
        </h2>
        <div class="user_page_edit">
          <% if host_signed_in? %>
            <% if current_host.id == @host.id %>
              <%= link_to 'フォロワーリストの管理', '#', class: "user_page_edit_btn" %>
            <% end %>
          <% end %>
        </div>
      </div>
      
      <%# フォロワーの一覧　%>
      <%= render partial: "guest", collection: @follow_guests %>
      <%# フォロワーの一覧　%>



    </div>
  </div>
</div>

<%= render "shared/footer" %>
